@model LogTimeViewModel
@{
    ViewData["Title"] = "Log time";
}

<div class="container">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary()
        </div>
    }
    <form asp-controller="TimeLogs" asp-action="LogTime">
        <div class="form-group">
            <label for="workedhours">Worked hours</label>
            <input type="text" required placeholder="0" class="form-control" id="workedHours" name="workedhours" aria-describedby="workedHoursErrorMessage" autocomplete="off">
            <small id="workedHoursErrorMessage" class="d-none text-danger"></small>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
        </div>
        @Html.HiddenFor(s => s.ProjectId)
        <button type="submit" class="btn btn-primary">Log time</button>
    </form>
</div>