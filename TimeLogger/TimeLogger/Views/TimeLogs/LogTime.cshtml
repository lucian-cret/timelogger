@model LogTimeViewModel
@{
    ViewData["Title"] = "Log time";
}

<div class="container">
    <form asp-controller="TimeLogs" asp-action="LogTime">
        <div class="form-group">
            <label for="duration">Duration</label>
            <input type="time" min="00:30" max="08:00" required class="form-control" id="duration" name="duration" aria-describedby="durationInfo">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="duration" rows="3" required></textarea>
        </div>
        @Html.HiddenFor(s => s.ProjectId)
        <button type="submit" class="btn btn-primary">Log time</button>
    </form>
</div>