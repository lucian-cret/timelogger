@model LogTimeViewModel
@{
    ViewData["Title"] = "Log time";
}

<div class="container">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary()
        </div>
    }
    <form id="logTimeForm" asp-controller="TimeLogs" asp-action="LogTime">
        <div class="form-group">
            <label for="workedhours">Worked hours</label>
            <input type="text" required placeholder="0" class="form-control" id="workedHours" name="workedHours" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
        </div>
        @Html.HiddenFor(s => s.ProjectId)
        <button type="submit" class="btn btn-primary">Log time</button>
    </form>
    <a class="btn btn-secondary mt-2" href="@Url.Action("TimeLogsList", "TimeLogs", new { projectId = Model.ProjectId})" role="button">Back to time logs list</a>
    <a class="btn btn-secondary mt-2" href="@Url.Action("ProjectsList", "Projects")" role="button">Back to projects list</a>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#logTimeForm').validate({
                rules: {
                    workedHours: {
                        required: true,
                        number: true,
                        range: [0.5, 8]
                    }
                }
            });
        });
    </script>
}